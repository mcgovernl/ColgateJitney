#main
    .row
        %h2.header.title= "#{@driver.first} #{@driver.last}"
    .row
        .col-md-offset= "Make: #{@driver.make}, Model: #{@driver.model}, Plate: #{@driver.plate}"
    .row
        .col-md-offset= "Available seats: #{@driver.seats}"
    .row
        .col-md-offset= "Current Price: #{@driver.price}"
    .row
        -if @driver.available?
            .col-md-offset.available= "Currently available!"
        -else
            .col-md-offset.not_available= "Not currently available :("

    %table.table
        %h2 Reviews
        %thead
            %th Reviews
            %th Stars
            %th Description
            //%th Reviewer

        %tbody
            -@reviews.each do |rev|
                %tr
                    %td
                    %td.stars= rev.stars
                    %td= rev.description
                    //Leave the name of rider who wrote description

    %br

    =link_to "Leave a review", new_review_path(:rider_id => params[:id] , :driver_id => params[:driver_id])
    =link_to "Go back to view all drivers", riders_path()
