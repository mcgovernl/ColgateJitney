    %h1.center.fire Edit Rider Info

    =form_for @rider, :method => :patch do |f|
        .field
            =f.label :first, "First Name"
            =f.text_field :first

        .field
            =f.label :last, "Last Name"
            =f.text_field :last

        .field
            =f.label :start, "Pickup Location"
            =f.text_field :start

        .field
            =f.label :destination, "Destination"
            =f.text_field :destination


